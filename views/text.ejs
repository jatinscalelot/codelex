<script src="/javascripts/controllers/text.controller.js"></script>
<div class="container-fluid pt-4 px-4" ng-controller="TextController">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="App.txt"
                                id="apptxt_id" style="height: calc(100vh - 320px);" ng-model="textdata"></textarea>
                            <label for="apptxt_id">App.txt</label>
                        </div>     
                    </div>
                </div>
                <div class="col-sm-12 col-xl-12 justify-content-end d-flex">
                    <div class="rounded h-100 pt-4">
                        <div class="m-n2">
                            <button type="button" class="btn btn-danger m-2">Cancle</button>
                            <button type="button" class="btn btn-info m-2" ng-click="save()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>